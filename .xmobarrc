Config { font = "xft:UbuntuMono Nerd Font Mono:style=Bold 14"
       , bgColor = "#001115"
       , fgColor = "#818f8e"
       , position = TopSize L 90 23
       , commands = [ Run Cpu ["-m", "4", "-w", "2", "-L","3","-H","50","--normal","gray","--high","red"] 10
                    , Run Memory ["-w", "2", "-t","Mem: <usedratio>%"] 10
                    , Run Battery [ "--template" , "Batt: <acstatus>"
                                  , "--Low"      , "10"        -- units: %
                                  , "--High"     , "80"        -- units: %
                                  , "--low"      , "red"
                                  , "--normal"   , "#a46318"
                                  , "--high"     , "gray"

                                  , "--" -- battery specific options
                                            -- discharging status
                                            , "-o"	, "üèÉ‚Äç‚û°Ô∏è<left>% (<timeleft>)"
                                            -- AC "on" status
                                            , "-O"	, "‚û§‚û§ <left>%"
                                            -- charged status
                                            , "-i"	, "<fc=#168416>100%</fc>"
                                  ] 50
                    , Run Swap ["-w", "2", "-t","<usedratio>%"] 10
                    -- , Run Date "%a %b %_d %l:%M" "date" 10
                    , Run Date "%a %b %_d" "date" 10
                    , Run XMonadLog
                    , Run Com "battery_bar" [] "bat_bar" 30
                    , Run Com "adjust-brightness" [] "bright" 10
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%XMonadLog% }{ %bright% %bat_bar% %battery% %cpu% %memory% - %swap% <fc=#1d8016>%date%</fc>"
       , allDesktops = True
       }
